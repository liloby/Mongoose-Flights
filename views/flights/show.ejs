<%- include('../partials/header') %>
<h1>Flight Details</h1>
<container id="show-page">
    <div>Airline: </div>
    <div><%= flight.airline %> </div>
    <div>Airport: </div>
    <div><%= flight.airport %> </div>
    <div>Flight No: </div>
    <div><%= flight.flightNo %> </div>
    <div>Departure Date: </div>
    <div style="<%= flight.departs < Date.now() ? 'color: red' : '' %>"><%= flight.departs %> </div>
    
    <br><br><h2>Add Destinations</h2>
    <form id="add-review-form" method="POST"
    action="/flights/<%= flight._id %>/destinations">
    <label
    >Airport:
    <select name="airport">
        <option value="DEN" selected>DEN</option>
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select> </label
    <label
    >Arrival Date:
    <input type="datetime-local" name="arrival" /> </label
    ><br />
    <input type="submit" value="Add Destination">
</form>

<% if (flight.destinations.length) { %> 
    <table>
        <div>
          <div>
            <div>Airport</div>
            <div>Arrival</div>
          </div>
        </div>
        <div>
          <% flight.destinations.forEach(function(destination) { %>
            <div>
              <div><%= destination.airport %></div>
              <div><%= destination.arrival %></div>
            </div>
          <% }); %>
        </div>
      </table>
    <% } else { %>
      <h5>No Destinations Yet</h5>
    <% } %>

</container>